
{
  "compilerOptions": {
    "lib": [
      "es2018",
      "es5",
      "dom"
    ],
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "./node_modules/**/*",
    "./build/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
